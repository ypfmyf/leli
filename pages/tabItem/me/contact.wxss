.index_top{
   position: relative;
   top:0rpx;
   left:0rpx;
   width:100%;
   height:280rpx;
}
.gradientsContainer {
  /* background: linear-gradient(to right, #008ecd, #48b8d2); */
  background: linear-gradient(to right, #BCC1C4, #E3E0DB);
  position: absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:280rpx;
 
}
.contet_list{
  position: absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:280rpx;
  display: flex;
  justify-content: space-between;
}
.contet_list_left .list_image{
   width:220rpx;
   height:200rpx;
   display: flex;
   align-items: center;
   justify-content: center;
}
.contet_list_left .list_name{
   display: flex;
   align-items: center;
   justify-content: center;
}
.contet_list_right{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-right:20rpx;
}
.right_image{
  display: flex;
  align-items: center;
  justify-content:flex-end;
  margin-top:20rpx;
}

.avatar {
  height:140rpx;
  width:130rpx;
  border-radius:50%;
  overflow: hidden;
  background-color: gainsboro;
  border:4rpx solid white;

}
.inputText{
  margin-left:40rpx;
  width:200rpx;
  height:80rpx;
  border:2rpx solid #000;
  display: flex;
  align-items: center;
}
