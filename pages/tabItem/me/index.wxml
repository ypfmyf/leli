            <image class='icon_20 unDo' src="../../imgs/phone.png"></image>
            <label class='f_17' style='color:#c00000;margin-left:10px'>绑定手机号</label>
          </view>
          <image class='icon_15 unDo' src='../../imgs/i.png' mode='aspectFit'></image>
        </view>
        <view class='hc menuContent' bindtap='_hour'  wx:if="{{usertype==1}}">
