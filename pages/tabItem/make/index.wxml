<view class="baseContainer" wx:if="{{loaded}}">
  <view class="topGU" >
        <view class='fw hc' style='height:60px;justify-content:center;background:#fff;'>
          <view class='hc' style='height:60px;width:20%;justify-content:flex-end' bindtap='previousMonth' 
          wx:if="{{showLeftMonth}}">
            <!-- <image class='icon_20' mode='aspectFit' src='../../imgs/previous.png'></image> -->
            <image class='icon_20' mode='aspectFit' src='../../imgs/previous02.png'></image>
          </view>
           <!-- <form bindsubmit="previousMonth" report-submit="true">
                  <button form-type="submit" class='actionBtn buttonA' style='background-color:#fff;margin-bottom:0px;'>
                       <image class='icon_20' mode='aspectFit' src='../../imgs/previous.png'></image>
                  </button>
           </form> -->
          <view  style='margin:0 50rpx;'>
            <picker bindchange='monthChange' mode='selector' range="{{listTime}}" value="index" range-key="start">
              <view>{{selectMonthText}}</view>
            </picker>
          </view>
        
          <view class='hc' style='height:60px;width:20%' bindtap='nextMonth'  wx:if="{{showrightMonth}}">
            <image class='icon_20' mode='aspectFit' src='../../imgs/next02.png'></image>
          </view>
          <!-- <form bindsubmit="nextMonth" report-submit="true">
                  <button form-type="submit" class='actionBtn buttonA' style='background-color:#fff;margin-bottom:0px;'>
                       <image class='icon_20' mode='aspectFit' src='../../imgs/next.png'></image>
                  </button>
           </form> -->
        </view>
        <!-- <view class='vc fw messageContainer'>
            <text class='unDo'  wx:if="{{courseinfo.length==[]||dateinfo.dateflag==1}}">当天无法报名</text>
            <text class='unDo'
              wx:if="{{courseinfo.length>0&&dateinfo.dateflag==0}}">选择日期查询课程&报名</text>
        </view> -->
  </view>
  <view wx:if="{{courseinfo.length==0}}" style="margin-top:80px;text-align: center;font-size:36rpx;"> <text>暂时还没有安排课程喔！</text>
  </view>
 <view style="margin-top:75px;">

    <block wx:for="{{courseinfo}}" wx:key="">
   
   <view style='margin-top:10px;' wx:if="{{loaded}}">
        <view class="touch-item" style="width:{{width}}px;">
           <view class="boxSizing cardContainer" style="margin:0px 10px 10px 10px;overflow:visible;width:100%;padding:0px;">
           
             <form bindsubmit="_book01" report-submit="true">
             <!-- #D9D9D9 height:80rpx green {{item.status==8||item.status==1? 'background:#F75F58;':''}}{{item.status==2||item.status==4? 'background:#6267F5;':''}}-->
                      <button form-type="submit"
                       class="hc"
                        style="justify-content: space-between;background:#D9D9D9;border-radius: 10px 10px 0px 0px;height:50rpx;font-size:34rpx;"
                        data-id='{{item.id}}' hover-class="none">
                       <view style="margin-left:30rpx;color:#000;"><label>{{item.time}}</label></view>
                      <view style="margin-right:30rpx;font-size:30rpx;"> 
                          <label wx:if="{{item.status==1}}" style="color:#c00000;font-size:34rpx;">可报名</label>
                          <label wx:if="{{item.status==2}}">已报名</label>
                          <label wx:if="{{item.status==3}}">人数已满</label>
                          <label wx:if="{{item.status==4}}" style="color:#c00000;font-size:34rpx;">待签到</label>
                          <label wx:if="{{item.status==5}}">已签到</label>
                          <label wx:if="{{item.status==6}}">已排队</label>
                          <label wx:if="{{item.status==7}}">未签到</label>
                          <label wx:if="{{item.status==8}}">进行中</label>
                          <label wx:if="{{item.status==9}}">已结束</label>
                          <label wx:if="{{item.status==10}}">课程已取消</label>
                      </view>
                      
                      </button>
             </form>
            <view class="hc" style="margin:20rpx">
              <form bindsubmit="_book02" report-submit="true" style="flex:1;">
                    <button form-type="submit" class="hc" data-id='{{item.id}}' hover-class="none">
                          <view  class="hc">
                                  <image src="{{item.eventspic}}" style="width:120rpx;height:130rpx;"></image>
                          </view>
                          <view style="flex:1;margin-left:10rpx;">
                              <view style="font-size:32rpx;color:#c00000;">
                                  <label>{{item.coursename1}}</label>
                                  <label  style="padding-left:20rpx;">{{item.coursename2}}</label>
                              
                              </view>
                              <view class="hc" style="margin-top:15rpx;">
                                    <view  class="hc">
                                        <image src="{{item.coachpic}}" style="width:65rpx;height:70rpx;border-radius:50%;"></image>
                                    </view>
                                    <view style="font-size:28rpx;color:#BDBCBB;margin-left:20rpx;">
                                        <view>教练：{{item.coach}}</view>
                                        <view>场地：{{item.gym}}</view>
                                    </view>
                              </view>
                           </view>
                    
                    </button>
              </form>
              <form bindsubmit="_signClcik04" report-submit="true" wx:if="{{item.status==4}}">
                    <button form-type="submit" class="actionBtn m_tiaoD" data-id='{{item.id}}' hover-class="none" style='background-color:#c00000;color:#fff;' wx:if="{{item.status==4}}">签到
                 </button>
              </form>


            </view>
            
           
           </view>
        
        </view>
    </view>
   </block>
 
 
 </view>
   
    
    


</view>